{
    "parser": "@babel/eslint-parser",
    "plugins": [
        "html",
        "ava",
        "unicorn",
        "babel",
        "markdown"
    ],
    "extends": [
        "plugin:unicorn/recommended",
        "plugin:ava/recommended",
        "xo",
        "xo-space"
    ],
    "rules": {
        "capitalized-comments": "off",
        "unicorn/no-reduce": "off"
    }
}
